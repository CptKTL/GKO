<UserControl x:Class="Autolaskuri.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Autolaskuri"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel Width="Auto" Height="Auto">
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="0,0,0,0"  Width="75" Click="button_Click"/>
        <Label x:Name="label" Content="{Binding Path=Laskuri}" HorizontalAlignment="Left" Margin="0,10,0,0"/>

    </StackPanel>
</UserControl>
