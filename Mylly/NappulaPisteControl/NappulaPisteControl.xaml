<UserControl x:Class="NappulaPisteNamespace.NappulaPiste"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NappulaPisteNamespace"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Style x:Key="NappulaPiste" TargetType="{x:Type Ellipse}">

        <Style.Setters>
            <Setter Property="Canvas.Top" Value="{Binding ElementName=PerusAlue, Path=PuolikasKorkeus}"/>

            <Setter Property="Canvas.Left" Value="{Binding ElementName=PerusAlue, Path=PuolikasLeveys}"/>
            <!--<Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>-->
            <Setter Property="Fill" Value="Black"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <EventSetter Event="MouseUp" Handler="NappulaPisteClick"></EventSetter>
        </Style.Setters>
    </Style>
    <Grid>
            
    </Grid>
</UserControl>
