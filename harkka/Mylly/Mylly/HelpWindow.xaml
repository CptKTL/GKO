<Window x:Class="Mylly.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mylly"
        mc:Ignorable="d"
        Title="Help" Height="300" Width="300" MinHeight="300" MinWidth="300">
    <StackPanel >
        <TextBlock IsEnabled="False" Margin="10,10,10,10" ScrollViewer.HorizontalScrollBarVisibility="Auto" TextWrapping="WrapWithOverflow" 
                 Text="Mylly-Peli. Tällä ohjelmalla voi leikkiä pelaavansa Myllyä. Pelilaudan ympyröihin voi asetella pelinappuloita 'Insert Piece' -toiminnolla. Nappuloita voi valita klikkaamalla niitä. Uusien nappuloiden väriä voi muuttaa Tools->Settings valikosta. Nappuloita voi poistaa valitsemalla nappulan ja painamalla sitten 'Remove Piece'. Nappuloita voi siirtää viereisiin ruutuihin valitsemalla nappulan, painamalla 'Move Piece' ja valitsemalla nappulan vieressä olevan ympyrän.">
        </TextBlock>
    </StackPanel>
</Window>
