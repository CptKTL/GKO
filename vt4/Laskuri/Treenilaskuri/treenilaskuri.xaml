<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Treenilaskuri"
             xmlns:TimeTextBox="clr-namespace:TimeTextBox;assembly=TimeTextBox" xmlns:NumberTextBox="clr-namespace:NumberTextBox;assembly=NumberTextBox" xmlns:PaceLabel="clr-namespace:PaceLabel;assembly=PaceLabel" x:Class="Treenilaskuri.treenilaskuri"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
    DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel>

        <TimeTextBox:timeTextBox x:Name="timeTextBox" HorizontalAlignment="Left"  Margin="0,5,0,5" VerticalAlignment="Top"/>

        <NumberTextBox:numberTextBox x:Name="numberTextBox" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Top"/>

        <PaceLabel:paceLabel  Distance="{Binding Number, ElementName=numberTextBox}" HorizontalAlignment="Left" Margin="0,5,0,5" VerticalAlignment="Top" Time="{Binding Time, ElementName=timeTextBox}"/>

    </StackPanel>
</UserControl>
